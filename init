#include <stdio.h>
#include <stdlib.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <sys/stat.h>
#include <fcntl.h>
#include <unistd.h>

#define SHM_SIZE 1024

int main() {
    const char* file_path = "file.txt";
    const int proj_id = 42;
    const int file_flags = O_CREAT | O_RDWR; 
    const mode_t file_mode = S_IRUSR | S_IWUSR | S_IRGRP | S_IROTH; 
    const int shm_flags = IPC_CREAT | 0666; 
    int fd = open(file_path, file_flags, file_mode);
    if (fd == -1) {
        perror("open failed");
        exit(1);
    }

    
    key_t key = ftok(file_path, proj_id);
    if (key == -1) {
        perror("ftok failed");
        exit(1);
    }

 
    int shm_id = shmget(key, SHM_SIZE, shm_flags);
    if (shm_id == -1) {
        perror("shmget failed");
        exit(1);
    }

    printf( '%s' id %d , file_path, shm_id);

    close(fd);

    return 0;
}
